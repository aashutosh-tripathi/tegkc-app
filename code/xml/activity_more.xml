<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/moretoolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pink">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="More"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="@font/open_sans_bold"
            tools:layout_editor_absoluteX="16dp" />
    </android.support.v7.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/moretoolbar"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="150dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/more_logo"
        android:id="@+id/imgMore"
        app:layout_constraintTop_toBottomOf="@+id/moretoolbar"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMore">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:onClick="moreitems"
            android:text="Dashboard"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:fontFamily="@font/poppins" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/c1"
        app:layout_constraintTop_toBottomOf="@+id/c1">

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:onClick="moreitems"
            android:text="Rulebook"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:fontFamily="@font/poppins" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/c3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/c2"
        app:layout_constraintTop_toBottomOf="@+id/c2">

        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:onClick="moreitems"
            android:text="Judge Login"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:fontFamily="@font/poppins" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/c4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/c3"
        app:layout_constraintTop_toBottomOf="@+id/c3">

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:onClick="moreitems"
            android:text="Contact Us"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:fontFamily="@font/poppins" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/c5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/c4"
        app:layout_constraintTop_toBottomOf="@+id/c4">

        <TextView
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:onClick="moreitems"
            android:text="Developed By"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:fontFamily="@font/poppins" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/c6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/c5"
        app:layout_constraintTop_toBottomOf="@+id/c5">

        <TextView
            android:id="@+id/t6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:onClick="moreitems"
            android:text="Our Team"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:fontFamily="@font/poppins" />
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>

    <include layout="@layout/bottomnavigationbar"/>


</android.support.constraint.ConstraintLayout>